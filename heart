                        text: `–í –æ–≥–Ω–µ–Ω–Ω–æ–º —Å–µ—Ä–¥—Ü–µ –≤—ã —É—á–∏—Ç–µ—Å—å –ø–µ—Ä–µ–¥–∞–≤–∞—Ç—å —ç–Ω–µ—Ä–≥–æ–ø–æ—Ç–æ–∫–∏ —Ç–µ–º, –∫–æ–≥–æ –Ω–µ –∑–Ω–∞–µ—Ç–µ. –ü–æ—Å–∫–æ–ª—å–∫—É –≤–∞—à–µ —Ç–µ–ª–æ –∏ –≤–∞—à–∞ –∂–∏–∑–Ω—å –≤ –∫–æ–Ω–µ—á–Ω–æ–º –∏—Ç–æ–≥–µ —Ç–æ–∂–µ –∑–∞–≤–∏—Å–∏—Ç –æ—Ç –Ω–∏—Ö: –∑–Ω–∞–∫–æ–º—ã—Ö –∏–ª–∏ –Ω–µ–∑–Ω–∞–∫–æ–º—ã—Ö, –Ω–æ –∂–∏–≤—É—â–∏—Ö —Å–µ–π—á–∞—Å –Ω–∞ —ç—Ç–æ–π –ø–ª–∞–Ω–µ—Ç–µ –∏–ª–∏ –∫–æ–≥–¥–∞-—Ç–æ –∂–∏–≤—à–∏—Ö –≤ –æ–±—ã—á–Ω—ã—Ö —Ç–µ–ª–∞—Ö, –≤—ã –Ω–∞—á–∏–Ω–∞–µ—Ç–µ —Å—Ç—Ä—É–∫—Ç—É—Ä–∏—Ä–æ–≤–∞—Ç—å –∏ –∏—Ö –∂–∏–∑–Ω—å. –≠—Ç–∞–ø ¬´—è —Ç–≤–æ—Ä—é¬ª, —ç—Ç–∞–ø –±–µ–∑–≥—Ä–∞–Ω–∏—á–Ω–æ–≥–æ —Ç–≤–æ—Ä—á–µ—Å—Ç–≤–∞. –í–∞—à–µ —Å–µ—Ä–¥—Ü–µ —É–∂–µ –≥–æ—Ç–æ–≤–æ, –æ–Ω–æ –æ—Ç—Å–ª–µ–∂–∏–≤–∞–µ—Ç –ø—Ä–µ–¥—ã–¥—É—â–∏–µ —ç—Ç–∞–ø—ã –∏ –≤—ã—Å—Ç—Ä–∞–∏–≤–∞–µ—Ç –≤—Å—ë –ø–æ —Ü–µ–ø–æ—á–∫–µ –∏–µ—Ä–∞—Ä—Ö–∏—á–µ—Å–∫–æ–π. –î–∞—ë—Ç —Ç–æ–ª—å–∫–æ —Ä–∞–∑—É–º–Ω—ã–µ —Å–∏–≥–Ω–∞–ª—ã –Ω–∞ –¥–µ–π—Å—Ç–≤–∏—è, —Å–æ–∑–¥–∞—ë—Ç —Ç–æ—Ç —Ä–µ–∂–∏–º, –∫–æ—Ç–æ—Ä—ã–π –æ–Ω–∏ –≤ —Å–æ—Å—Ç–æ—è–Ω–∏–∏ –≤—ã–ø–æ–ª–Ω–∏—Ç—å, –∏–Ω–æ–≥–¥–∞ –¥–∞–≤–∞—è —Ä–µ–∂–∏–º –ø—Ä–µ–¥–µ–ª—å–Ω—ã—Ö –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–µ–π, –∏–Ω–æ–≥–¥–∞ –µ–≥–æ –æ—Å–ª–∞–±–ª—è—è.`
                    }
                }
            }
        };
        
        const friendsData = {
            otdyh: {
                name: 'üåô –î—Ä—É–≥ –î–ª—è –æ—Ç–¥—ã—Ö–∞',
                description: ''
            },
            deneg: {
                name: 'üí∞ –î–µ–Ω–µ–∂–Ω—ã–π –¥—Ä—É–≥',
                description: ''
            },
            rabota: {
                name: '‚ö° –î—Ä—É–≥ –î–ª—è —Ä–∞–±–æ—Ç—ã',
                description: ''
            }
        };
        
        function showView(view) {
            document.querySelectorAll('.content-section').forEach(el => el.classList.remove('active'));
            
            if (view === 'hearts') {
                document.getElementById('hearts-view').classList.add('active');
                currentView = 'hearts';
            } else if (view === 'friends') {
                document.getElementById('friends-view').classList.add('active');
                currentView = 'friends';
            }
            
            previousView = 'main';
        }
        
        function showMain() {
            document.querySelectorAll('.content-section').forEach(el => el.classList.remove('active'));
            document.getElementById('main-nav').classList.add('active');
            currentView = 'main';
        }
        
        function goBack() {
            if (previousView === 'hearts' || previousView === 'friends') {
                showView(previousView);
            } else {
                showMain();
            }
        }
        
        function showHeart(heartId) {
            const heart = heartsData[heartId];
            let content = `
                <h2>${heart.name}</h2>
                <p style="font-size: 1.2em; color: #e8d5c4; margin-bottom: 30px;">${heart.description}</p>
                <h3 style="color: #ff9b71; margin-bottom: 20px;">–í–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏–µ —Å –¥—Ä—É–∑—å—è–º–∏:</h3>
            `;
            
            for (let friendId in heart.friends) {
                const friend = heart.friends[friendId];
                content += `
                    <div class="interaction-card">
                        <h3 class="interaction-title">${friend.name}</h3>
                        <div class="interaction-content">
                            ${friend.text.split('\n\n').map(p => `<p>${p}</p>`).join('')}
                        </div>
                        <div style="margin-top: 20px;">
                            <span class="tag">${heart.name}</span>
                            <span class="tag">${friend.name}</span>
                        </div>
                    </div>
                `;
            }
            
            document.getElementById('detail-content').innerHTML = content;
            document.querySelectorAll('.content-section').forEach(el => el.classList.remove('active'));
            document.getElementById('detail-view').classList.add('active');
            
            previousView = currentView;
            currentView = 'detail';
        }
        
        function showFriend(friendId) {
            const friend = friendsData[friendId];
            let content = `
                <h2>${friend.name}</h2>
                <p style="font-size: 1.2em; color: #e8d5c4; margin-bottom: 30px;">${friend.description}</p>
                <h3 style="color: #ff9b71; margin-bottom: 20px;">–†–∞–±–æ—Ç–∞ —Å —Ä–∞–∑–Ω—ã–º–∏ —Å–µ—Ä–¥—Ü–∞–º–∏:</h3>
            `;
            
            for (let heartId in heartsData) {
                const heart = heartsData[heartId];
                const interaction = heart.friends[friendId];
                content += `
                    <div class="interaction-card">
                        <h3 class="interaction-title">${heart.name}</h3>
                        <div class="interaction-content">
                            ${interaction.text.split('\n\n').map(p => `<p>${p}</p>`).join('')}
                        </div>
                        <div style="margin-top: 20px;">
                            <span class="tag">${heart.name}</span>
                            <span class="tag">${friend.name}</span>
                        </div>
                    </div>
                `;
            }
            
            document.getElementById('detail-content').innerHTML = content;
            document.querySelectorAll('.content-section').forEach(el => el.classList.remove('active'));
            document.getElementById('detail-view').classList.add('active');
            
            previousView = currentView;
            currentView = 'detail';
        }
    </script>
</body>
</html>
